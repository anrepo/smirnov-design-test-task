	data = [
		{
			surname: 'Васильев',
			name: 'Семен',
			qualityOne: 2,
			qualityTwo: 2
		},
		{
			surname: 'Антонов',
			name: 'Денис',
			qualityOne: 1,
			qualityTwo: 2
		},
		{
			surname: 'Иванов',
			name: 'Кузьма',
			qualityOne: 2,
			qualityTwo: 1
		},
		{
			surname: 'Кузьмина',
			name: 'Виктория',
			qualityOne: 1,
			qualityTwo: 1
		},
		{
			surname: '',
			name: 'Дмитрий',
			qualityOne: 2,
			qualityTwo: 2
		},
		{
			surname: 'Савинков',
			name: '',
			qualityOne: 1,
			qualityTwo: 0
		},
		{
