block vars
	-
		var baseDir = './'
	-
		var url = null
	-
		var title = typeof title !== 'undefined' ? title : null
		var description = typeof description !== 'undefined' ? description : null
	-
		var meta = {
			charset: 'utf-8',
			msapplicationTileColor: '#2b5797',
			msapplicationTileImage: null,
			msapplicationNotification: null,
			msapplicationSquare70x70logo: `${baseDir}favicon/mstile-70x70.png`,
			msapplicationSquare144x144logo: `${baseDir}favicon/mstile-144x144.png`,
			msapplicationSquare150x150logo: `${baseDir}favicon/mstile-150x150.png`,
			msapplicationSquare310x310logo: `${baseDir}favicon/mstile-310x310.png`,
			msapplicationWide310x150logo: `${baseDir}favicon/mstile-310x150.png`,
			msapplicationConfig: `${baseDir}favicon/browserconfig.xml`,
			themeColor: '#ffffff',
			viewport: 'width=device-width',
			XUACompatible: 'IE=edge'
		}
	-
		var links = {
			appleTouchIcon: `${baseDir}favicon/apple-touch-icon.png`,
			icon: `${baseDir}favicon/favicon.ico`,
			icon16x16: `${baseDir}favicon/favicon-16x16.png`,
			icon32x32: `${baseDir}favicon/favicon-32x32.png`,
			icon192x192: `${baseDir}favicon/android-chrome-192x192.png`,
			icon512x512: `${baseDir}favicon/android-chrome-512x512.png`,
			manifest: `${baseDir}favicon/site.webmanifest`,
			maskIcon: {
				href: `${baseDir}favicon/safari-pinned-tab.svg`,
				color: '#5bbad5'
			}
		}

doctype html
html(class=['theme--dark'])
	head
		block head-meta
			if meta.charset !== null
				meta(charset!=meta.charset)
			if meta.XUACompatible !== null
				meta(http-equiv="X-UA-Compatible" content!=meta.XUACompatible)
			if meta.viewport !== null
				meta(name="viewport" content!=meta.viewport)
			if title !== null
				title!= title
			if description !== null
				meta(name="description" content!=description)
			if meta.msapplicationConfig !== null
				meta(name="msapplication-config" content!=meta.msapplicationConfig)
			if meta.themeColor !== null
				meta(name="theme-color" content!=meta.themeColor)

		block head-links
			//- Apple Icon
			if links.appleTouchIcon !== null
				link(rel="apple-touch-icon" href!=links.appleTouchIcon)
			//- Main Icon
			if links.icon !== null
				link(rel="icon" href!=links.icon)
			if links.icon16x16 !== null
				link(rel="icon" href!=links.icon16x16 sizes="16x16")
			if links.icon32x32 !== null
				link(rel="icon" href!=links.icon32x32 sizes="32x32")
			if links.icon192x192 !== null
				link(rel="icon" href!=links.icon192x192 sizes="192x192")
			if links.icon512x512 !== null
				link(rel="icon" href!=links.icon512x512 sizes="512x512")
			//- Manifest
			if links.manifest !== null
				link(rel="manifest" href!=links.manifest)
			//- Safari
			if links.maskIcon.href !== null
				link(rel="mask-icon" href!=links.maskIcon.href color=links.maskIcon.color)

		block head-styles
			link(rel="stylesheet" href!=`${baseDir}css/styles.css`)

	body
		block body-content
		block body-scripts
			script(src!=`${baseDir}js/scripts.js`)
